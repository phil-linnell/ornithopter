/* Example */

loader-size = 12px;
loader-jump = loader-size * 2.25;
loader-bg = #fff;

$jumping-box = {
  name: jumping,
  total-duration: 1.7,
  iteration: infinite,
  timingFunction: linear,
  animations: {
    moveUp: {
      property: bottom,
      from: 0,
      to: loader-jump,
      duration: 0.5,
      delay: 0.33,
      curve: {
        c1: 0 1,
        c2: 0.86 1,
        accuracy: 5
      }
    }
    moveDown: {
      property: bottom,
      from: loader-jump,
      to: 0,
      duration: 0.33,
      delay: 0.83,
      curve: {
        c1: 0.5 0,
        c2: 1 0.8,
        accuracy: 5
      }
    }
    squashDown: {
      property: scale,
      from: '1, 1',
      to: '1.25, 0.25',
      duration: 0.33,
      delay: 0
    }
    squashUp: {
      property: scale,
      from: '1.25, 0.25',
      to: '0.8, 1.13',
      duration: 0.25,
      delay: 0.33
    }
    squashNormalise: {
      property: scale,
      from: '0.8, 1.13',
      to: '1, 1',
      duration: 0.33,
      delay: 0.58
    }
    squashTop: {
      property: scale,
      from: '1, 1',
      to: '1, 0.8',
      duration: 0.25,
      delay: 0.91
    }
    squashFall: {
      property: scale,
      from: '1, 0.8',
      to: '1.5, 0.25',
      duration: 0.08,
      delay: 1.16
    }
    squashEnd: {
      property: scale,
      from: '1.5, 0.25',
      to: '1, 1',
      duration: 0.25,
      delay: 1.24
    }
  }
}

.jumping-boxes {

  ul {
    font-size: 0;
  }

  li {
    position: relative;
    display: inline-block;
    width: loader-size;
    height: loader-size + loader-jump;
    margin-left: loader-size * .75;

    &:first-child {
      margin-left: 0;
    }

    div {
      position: absolute;
      bottom: 0;
      left: 0;
      width: loader-size;
      height: loader-size;
      background: #FFBF02;
      transform-origin: 50% bottom;
      animate($jumping-box);
    }

    &:nth-child(2) div {
      animation-delay: 0.08s;
      background: #96CC29;
    }

    &:nth-child(3) div {
      animation-delay: 0.16s;
      background: #009CF3;
    }

    &:nth-child(4) div {
      animation-delay: 0.24s;
      background: #ED0082;
    }
  }
}
