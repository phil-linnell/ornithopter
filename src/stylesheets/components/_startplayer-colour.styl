starting-colour = {
  yellow: #e7e00f,
  red: #e71f0f,
  white: white,
  blue: #1128d4,
  green: #268b13,
  black: black,
  pink: #de77cc,
  orange: #e9980c,
  purple: #890ce9
}

button-size = 70px;
margin-size = 10px;

@keyframes spin {
  100% {
    transform: rotate(360deg);
  }
}

@keyframes select {
  70% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes animation-stopping {
  70% {
    transform: scale(1.5);
  }
  100% {
    transform: scale(0);
  }
}

@keyframes result {
  70% {
    transform: scale(3);
  }
  100% {
    transform: scale(2.5);
  }
}
