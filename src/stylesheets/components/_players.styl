starting-colour = {
  yellow: #e7e00f,
  red: #e71f0f,
  white: white,
  blue: #1128d4,
  green: #268b13,
  black: black,
  pink: #de77cc,
  orange: #e9980c,
  purple: #890ce9
}

button-size = 70px;
margin-size = 10px;



@keyframes spin {
  100% {
    transform: rotate(360deg);
  }
}



#starting-colour {
  width: 320px;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  h1 {
    position: relative;
    z-index: 10;
    margin-bottom: 50px;
  }

  .wrapper {
    width: 220px;
    height: 220px;
    display flex;
    align-items: center;
    justify-content: center;

    &.animate {
      animation: spin 0.4s linear infinite .15s;
    }

  }

  #players {
    position: relative;
    font-size: 0;
    overflow: visible;
    // background: rgba(#000, .2)



    offset = (button-size + margin-size);

    div {
      display: block;
      width: button-size;
      height: button-size;
      opacity: .4;
      transform: scale(0.6);
      transition: all .1s ease-in-out;
      transform-origin: 50% 50%;
      appearance: none;
      border-radius: 50%;
      border: none;
      cursor: pointer;


      for colour, value in starting-colour {
        &.{colour} {
          background-color: value;
        }
      }
    }
  }

  button {
    background: rgba(255,255,255,0.1);
    color: white;
    padding: 0 25px;
    height: 44px;
    border-radius: 3px;
    line-height: @height;
    margin-top: 50px;
    letter-spacing: 2px;
    color: rgba(white, 0.6);
    transition: opacity .2s ease-in-out;
    position: relative;
    z-index: 10;

    &:active {
      background: rgba(255,255,255,0.25);
    }
  }
}
